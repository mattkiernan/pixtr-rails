<h2>This is for <%= @gallery.name %> Gallery</h2>

<%= link_to "Create new image", new_gallery_image_path(@gallery.id) %>

<p><%= @gallery.description %></p>

<ul>
  <% @gallery.images.each do |image| %>
    <li>
    <%= image_tag image.url %><br />
    <%= link_to image.name, gallery_image_path(@gallery, image) %><br />
    <%= link_to "Edit image", edit_gallery_image_path(@gallery, image) %><br />
      <%= form_for [@gallery, image], method: :delete do |form| %>
        <% form.submit "Delete" %>
      <% end %>
  </li>
  <% end %>
</ul>
