<h1>Groups Page </h1>

<%= link_to "Create Group", new_group_path %>

<ul>
  <% @groups.each do |group| %>
    <li><%= link_to group.name, group %> - <%= group.description %></li>
    <% if group.members.include? current_user %>
      yes
    <% else %>
      <%= button_to "Join group", group_group_memberships_path(group) %> 
    <% end %>
    </li>
  <% end %>
</ul>
