<p> This image name is <%= @image.name %></p>

<div><%= image_tag @image.url %></div>
<% @comments.each do |comment| %>
  <ul>
    <li><%= comment.body %></li>
  </ul>
<% end %>
<br />
<div>
  <%= form_for [@image, @comment] do |form| %>
    <%= form.label :body, "Comment" %>
    <%= form.text_field :body %>
    <%= form.submit %>
  <% end %>
</div>
